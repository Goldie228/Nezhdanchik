
<div class="card bg-base-200 shadow-md hover:shadow-lg transition-all duration-300 relative" id="cart-item-<%= cart_item.id %>">
  <div class="card-body p-4 md:p-6">
    <div class="flex flex-col gap-4">
      <!-- Заголовок товара с изображением -->
      <div class="flex flex-col sm:flex-row gap-4">
        <!-- Изображение блюда -->
        <div class="flex-shrink-0">
          <figure class="w-24 h-24 sm:w-32 sm:h-32 rounded-xl md:rounded-2xl overflow-hidden bg-base-300 shadow-md">
            <% if cart_item.dish.photos.attached? %>
              <%= image_tag url_for(cart_item.dish.photos.first.variant(resize_to_fill: [120, 120])),
                    class: "w-full h-full object-cover hover:scale-105 transition-transform duration-300",
                    alt: cart_item.dish.title %>
            <% else %>
              <div class="w-full h-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-base-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            <% end %>
          </figure>
        </div>

        <!-- Информация о товаре -->
        <div class="flex-1">
          <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2">
            <div class="flex-1">
              <h3 class="text-lg md:text-xl font-semibold mb-2">
                <%= link_to cart_item.dish.title, dish_path(cart_item.dish.category.slug, cart_item.dish.slug),
                    class: "text-primary hover:text-primary-focus transition-colors" %>
              </h3>

              <div class="flex flex-wrap items-center gap-2">
                <div class="flex items-center gap-2">
                  <span class="badge badge-primary badge-xs md:badge-sm">
                    <%= cart_item.per_item_weight_g %> г
                  </span>
                </div>

                <% if cart_item.dish.cooking_time_minutes %>
                  <span class="badge badge-ghost badge-xs md:badge-sm flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-11.5a.75.75 0 00-1.5 0V10a.75.75 0 00.3.6l2.5 1.9a.75.75 0 10.8-1.2L10.75 9.8V6.5z" clip-rule="evenodd" />
                    </svg>
                    ~ <%= pretty_cooking_time(cart_item.dish.cooking_time_minutes) %>
                  </span>
                <% end %>
              </div>
            </div>

            <div class="flex items-center gap-2">
              <span class="text-lg md:text-xl font-bold text-primary">
                <%= number_to_currency(cart_item.subtotal_cents / 100.0, unit: "BYN", format: "%n %u") %>
              </span>
              <!-- Пустой слот — кнопки внизу справа -->
            </div>
          </div>
        </div>
      </div>

      <% added_ingredients = cart_item.cart_item_ingredients.where(default_in_dish: false, included: true) %>
      <% removed_ingredients = cart_item.cart_item_ingredients.where(default_in_dish: true, included: false) %>

      <!-- Ингредиенты -->
      <% if added_ingredients.present? || removed_ingredients.present? %>
        <div class="bg-base-100 rounded-xl p-3 md:p-4">
          <h4 class="font-medium mb-2 text-sm text-base-content/70 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            Ингредиенты:
          </h4>

          <div class="flex flex-col gap-2">
            <!-- Добавки -->
            <% if added_ingredients.any? %>
              <div class="flex items-center flex-wrap">
                <span class="text-xs font-medium text-base-content/70 mr-2">Добавки:</span>
                <% added_ingredients.each do |cii| %>
                  <%= cii.ingredient.name %>
                <% end %>
              </div>
            <% end %>

            <!-- Убранные ингредиенты -->
            <% if removed_ingredients.any? %>
              <div class="text-xs text-base-content/50 mt-1">
                <span class="font-medium">Без:</span>
                <%= removed_ingredients.map { |cii| cii.ingredient.name }.join(', ') %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Управление количеством и цена -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
        <div class="flex items-center gap-2">
          <%= link_to "#",
              class: "btn btn-circle btn-sm btn-outline quantity-decrease hover:btn-primary",
              data: { cart_item_id: cart_item.id },
              title: "Уменьшить количество" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
            </svg>
          <% end %>

          <div class="min-w-[3rem] text-center font-bold text-lg" id="quantity-<%= cart_item.id %>">
            <%= cart_item.quantity %>
          </div>

          <%= link_to "#",
              class: "btn btn-circle btn-sm btn-outline quantity-increase hover:btn-primary",
              data: { cart_item_id: cart_item.id },
              title: "Увеличить количество" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Прямые кнопки Изменить и Удалить внизу справа -->
    <div class="absolute right-4 bottom-4 flex items-center gap-2">
      <%= button_to remove_cart_item_path(cart_item.id),
                method: :delete,
                class: "btn btn-sm btn-error flex items-center gap-2 px-3 py-1",
                title: "Удалить позицию",
                data: { cart_item_id: cart_item.id } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        <span class="hidden md:inline">Удалить</span>
      <% end %>
    </div>
  </div>
</div>
