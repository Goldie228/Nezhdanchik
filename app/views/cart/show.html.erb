<div class="min-h-screen bg-base-200">
  <div class="container mx-auto px-4 py-4 md:py-8">
    <div class="grid grid-cols-1 xl:grid-cols-3 gap-6 md:gap-8">
      <div class="xl:col-span-2">
        <div class="card bg-base-100 shadow-xl md:shadow-2xl">
          <div class="card-body p-4 md:p-6">
            <div class="flex items-center justify-between mb-4 md:mb-6">
              <h1 class="card-title text-2xl md:text-3xl font-bold text-primary">
                Ваша корзина
              </h1>
              <div class="badge badge-primary badge-lg" id="cart-items-badge">
                <%= @total_items %> 
                <% if @total_items % 10 == 1 && @total_items % 100 != 11 %>
                  позиция
                <% elsif [2, 3, 4].include?(@total_items % 10) && ![12, 13, 14].include?(@total_items % 100) %>
                  позиции
                <% else %>
                  позиций
                <% end %>
              </div>
            </div>

            <% if @cart_items.any? %>
              <div class="space-y-4 md:space-y-6" id="cart-items-container">
                <%= render @cart_items %>
              </div>
            <% else %>
              <div class="flex flex-col items-center justify-center py-12 md:py-16" id="cart-items-container">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-primary mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
                <h3 class="text-xl font-semibold text-base-content/70 mb-2">Ваша корзина пуста</h3>
                <p class="text-base-content/50 mb-6">Добавьте что-нибудь из нашего меню</p>
                <%= link_to "Перейти в меню", menu_path, class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="xl:col-span-1">
        <div class="sticky top-4 md:top-6 space-y-4 md:space-y-6">
          <div class="card from-primary/10 via-primary/5 to-secondary/10 shadow-xl md:shadow-2xl border border-primary/20">
            <div class="card-body p-4 md:p-6">
              <h2 class="card-title text-xl md:text-2xl text-primary mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
                Итого
              </h2>
              
              <div id="cart-summary">
                <%= render 'cart_summary' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  function getCsrfToken() {
    const metaTag = document.querySelector('meta[name="csrf-token"]');
    return metaTag ? metaTag.getAttribute('content') : null;
  }

  const csrfToken = getCsrfToken();

  function updateCartBadges(totalItems) {
    const headerBadge = document.getElementById('cart-count');
    if (headerBadge) {
      headerBadge.textContent = totalItems;
    }

    const pageBadge = document.getElementById('cart-items-badge');
    if (pageBadge) {
      const wordForm = getRussianPluralize(totalItems, 'позиция', 'позиции', 'позиций');
      pageBadge.innerHTML = `${totalItems} ${wordForm}`;
    }
  }

  function getRussianPluralize(number, one, few, many) {
    const lastDigit = number % 10;
    const lastTwoDigits = number % 100;

    if (lastDigit === 1 && lastTwoDigits !== 11) {
      return one;
    } else if ([2, 3, 4].includes(lastDigit) && ![12, 13, 14].includes(lastTwoDigits)) {
      return few;
    } else {
      return many;
    }
  }

  function updateCartItem(itemId, action) {
    const url = `/cart/update/${itemId}`;
    const data = { quantity_action: action };
    
    fetch(url, {
      method: 'PATCH',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': csrfToken,
        'Accept': 'application/json'
      },
      body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(data => {
      if (data.item_removed_id) {
        const itemElement = document.getElementById(`cart-item-${data.item_removed_id}`);
        if (itemElement) {
          itemElement.remove();
        }
      } else if (data.item_html) {
        const itemElement = document.getElementById(`cart-item-${itemId}`);
        if (itemElement) {
          const tempDiv = document.createElement('div');
          tempDiv.innerHTML = data.item_html;
          const newItemElement = tempDiv.firstElementChild;
          itemElement.parentNode.replaceChild(newItemElement, itemElement);
        }
      }

      if (data.cart_summary_html) {
        const summaryElement = document.getElementById('cart-summary');
        if (summaryElement) {
          summaryElement.innerHTML = data.cart_summary_html;
        }
      }

      if (data.total_items !== undefined) {
        updateCartBadges(data.total_items);
      }

      if (data.cart_empty) {
        const container = document.getElementById('cart-items-container');
        if (container) {
          container.innerHTML = `
            <div class="flex flex-col items-center justify-center py-12 md:py-16">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-primary mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
              </svg>
              <h3 class="text-xl font-semibold text-base-content/70 mb-2">Ваша корзина пуста</h3>
              <p class="text-base-content/50 mb-6">Добавьте что-нибудь из нашего меню</p>
              <a href="/menu" class="btn btn-primary">Перейти в меню</a>
            </div>
          `;
        }
      }
    })
    .catch(error => {
      console.error('Error updating cart item:', error);
      alert('Произошла ошибка при обновлении корзины');
      location.reload();
    });
  }

  function removeCartItem(itemId) {
    if (!confirm('Вы уверены, что хотите удалить этот товар из корзины?')) {
      return;
    }

    const url = `/cart/remove/${itemId}`;
    
    fetch(url, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': csrfToken,
        'Accept': 'application/json'
      }
    })
    .then(response => response.json())
    .then(data => {
      const itemElement = document.getElementById(`cart-item-${itemId}`);
      if (itemElement) {
        itemElement.remove();
      }

      if (data.cart_summary_html) {
        const summaryElement = document.getElementById('cart-summary');
        if (summaryElement) {
          summaryElement.innerHTML = data.cart_summary_html;
        }
      }

      if (data.total_items !== undefined) {
        updateCartBadges(data.total_items);
      }

      if (data.cart_empty) {
        const container = document.getElementById('cart-items-container');
        if (container) {
          container.innerHTML = `
            <div class="flex flex-col items-center justify-center py-12 md:py-16">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-primary mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
              </svg>
              <h3 class="text-xl font-semibold text-base-content/70 mb-2">Ваша корзина пуста</h3>
              <p class="text-base-content/50 mb-6">Добавьте что-нибудь из нашего меню</p>
              <a href="/menu" class="btn btn-primary">Перейти в меню</a>
            </div>
          `;
        }
      }
    })
    .catch(error => {
      console.error('Error removing cart item:', error);
      alert('Произошла ошибка при удалении товара');
      location.reload();
    });
  }

  const clearCartButton = document.getElementById('clear-cart-button');
  if (clearCartButton) {
    clearCartButton.addEventListener('click', function(e) {
      e.preventDefault();
      if (!confirm('Вы уверены, что хотите очистить всю корзину?')) {
        return;
      }

      const url = '/cart/clear';
      
      fetch(url, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': csrfToken,
          'Accept': 'application/json'
        }
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          updateCartBadges(0);

          const container = document.getElementById('cart-items-container');
          if (container) {
            container.innerHTML = `
              <div class="flex flex-col items-center justify-center py-12 md:py-16">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-primary mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
                <h3 class="text-xl font-semibold text-base-content/70 mb-2">Ваша корзина пуста</h3>
                <p class="text-base-content/50 mb-6">Добавьте что-нибудь из нашего меню</p>
                <a href="/menu" class="btn btn-primary">Перейти в меню</a>
              </div>
            `;
          }

          const summaryElement = document.getElementById('cart-summary');
          if (summaryElement) {
            summaryElement.innerHTML = `
              <div class="flex flex-col items-center justify-center py-12 md:py-16">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-primary mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
                <h3 class="text-xl font-semibold text-base-content/70 mb-2">Ваша корзина пуста</h3>
                <p class="text-base-content/50 mb-6">Добавьте что-нибудь из нашего меню</p>
                <a href="/menu" class="btn btn-primary">Перейти в меню</a>
              </div>
            `;
          }
        }
      })
      .catch(error => {
        console.error('Error clearing cart:', error);
        alert('Произошла ошибка при очистке корзины');
        location.reload();
      });
    });
  }

  document.addEventListener('click', function(e) {
    if (e.target.closest('.quantity-decrease')) {
      e.preventDefault();
      const button = e.target.closest('.quantity-decrease');
      const cartItemId = button.dataset.cartItemId;
      updateCartItem(cartItemId, 'decrease');
    } else if (e.target.closest('.quantity-increase')) {
      e.preventDefault();
      const button = e.target.closest('.quantity-increase');
      const cartItemId = button.dataset.cartItemId;
      updateCartItem(cartItemId, 'increase');
    } else if (e.target.closest('.remove-item')) {
      e.preventDefault();
      const button = e.target.closest('.remove-item');
      const cartItemId = button.dataset.cartItemId;
      removeCartItem(cartItemId);
    }
  });
});
</script>
