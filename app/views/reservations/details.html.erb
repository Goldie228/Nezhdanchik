
<div class="hero min-h-screen bg-base-200">
  <div class="hero-content">
    <div class="card w-full max-w-2xl shadow-2xl bg-base-100">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-6">Детали бронирования</h2>
        
        <div class="divider"></div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-base-content/70">Номер бронирования</p>
            <p class="font-semibold"><%= @booking.booking_number %></p>
          </div>
          
          <div>
            <p class="text-sm text-base-content/70">Статус</p>
            <p class="font-semibold">
              <span class="badge <%= status_badge_class(@booking.status) %>">
                <%= status_in_russian(@booking.status) %>
              </span>
            </p>
          </div>
          
          <div>
            <p class="text-sm text-base-content/70">Дата и время начала</p>
            <p class="font-semibold"><%= l(@booking.starts_at, format: :long) %></p>
          </div>
          
          <div>
            <p class="text-sm text-base-content/70">Дата и время окончания</p>
            <p class="font-semibold"><%= l(@booking.ends_at, format: :long) %></p>
          </div>
          
          <div>
            <p class="text-sm text-base-content/70">Продолжительность</p>
            <p class="font-semibold"><%= @booking.duration_hours %> ч.</p>
          </div>
          
          <div>
            <p class="text-sm text-base-content/70">Стоимость</p>
            <p class="font-semibold"><%= number_to_currency(@booking.total_price, unit: "BYN", format: "%n %u") %></p>
          </div>
          
          <% if @booking.require_passport %>
            <div>
              <p class="text-sm text-base-content/70">Паспортные данные</p>
              <p class="font-semibold">Требуются</p>
            </div>
          <% end %>
        </div>
        
        <% if @booking.special_requests.present? %>
          <div class="mt-4">
            <p class="text-sm text-base-content/70">Особые пожелания</p>
            <p class="font-semibold"><%= @booking.special_requests %></p>
          </div>
        <% end %>
        
        <div class="divider"></div>
        
        <div>
          <p class="text-sm text-base-content/70 mb-2">Выбранные места</p>
          <div class="flex flex-wrap gap-2">
            <% @booking.seats.each do |seat| %>
              <div class="badge badge-outline">
                Место <%= seat.number %>
                <% if seat.table.present? %>
                  (Стол <%= seat.table.name %>)
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
        
        <div class="divider"></div>
        
        <div class="card-actions justify-between">
          <%= link_to "В профиль", profile_path, class: "btn btn-outline" %>
          
          <% if @booking.confirmed? && @booking.future? %>
            <%= button_to "Отменить бронирование", 
                cancel_reservation_path(@booking), 
                method: :delete, 
                class: "btn btn-error",
                form: { 
                  data: { 
                    turbo_confirm: "Вы уверены, что хотите отменить это бронирование?" 
                  } 
                } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
