<div class="min-h-screen bg-base-200">
  <!-- Навигация -->
  <div class="navbar bg-base-100 shadow-lg">
    <div class="flex-1">
      <a class="btn btn-ghost normal-case text-xl">Панель менеджера</a>
    </div>
    <div class="flex-none">
      <ul class="menu menu-horizontal p-0">
        <li><%= link_to "Обзор", manager_dashboard_path %></li>
        <li><%= link_to "Календарь", manager_calendar_path, class: "active" %></li>
        <li><%= link_to "Столы", manager_tables_path %></li>
        <li><%= link_to "Бронирования", manager_bookings_path %></li>
      </ul>
    </div>
  </div>

  <div class="container mx-auto px-4 py-6">
    <!-- Заголовок и навигация по датам -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-4">
      <div>
        <h1 class="text-3xl font-bold">Календарь бронирований</h1>
        <p class="text-base-content/70">Просмотр и управление бронированиями</p>
      </div>
      <div class="flex gap-2 items-center">
        <%= link_to manager_calendar_path(date: @selected_date - 1.day), class: "btn btn-outline" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>
        
        <div class="form-control">
          <input type="date" id="date-picker" class="input input-bordered" value="<%= @selected_date.strftime('%Y-%m-%d') %>">
        </div>
        
        <%= link_to manager_calendar_path(date: @selected_date + 1.day), class: "btn btn-outline" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
        
        <%= link_to "Сегодня", manager_calendar_path, class: "btn btn-primary" %>
      </div>
    </div>

    <!-- Календарь с временными слотами -->
    <div class="bg-base-100 rounded-lg shadow-lg p-6 mb-6">
      <!-- ИСПРАВЛЕНО: Локализованная дата -->
      <h2 class="text-xl font-bold mb-4">Бронирования на <%= russian_date(@selected_date) %></h2>
      
      <!-- Легенда -->
      <div class="flex flex-wrap gap-4 mb-4">
        <% get_statuses_list.each do |status| %>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 <%= status[:color].gsub('badge', 'bg') %> rounded"></div>
            <span class="text-sm"><%= status[:text] %></span>
          </div>
        <% end %>
      </div>
      
      <!-- Таблица с временными слотами -->
      <div class="overflow-x-auto">
        <table class="table table-compact w-full">
          <thead>
            <tr>
              <th>Время</th>
              <!-- Заголовки для столов -->
              <% @tables.each do |table| %>
                <th class="text-center">Стол <%= table.name %></th>
              <% end %>
              <!-- Заголовки для отдельных мест -->
              <% @individual_seats.each do |seat| %>
                <th class="text-center">Место <%= seat.number %></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% # Генерируем временные слоты с шагом в 30 минут %>
            <% (9..23).each do |hour| %>
              <% [0, 30].each do |minute| %>
                <% time_slot = Time.zone.parse("#{@selected_date.strftime('%Y-%m-%d')} #{hour.to_s.rjust(2, '0')}:#{minute.to_s.rjust(2, '0')}:00") %>
                <tr>
                  <td class="font-semibold">
                    <%= time_slot.strftime('%H:%M') %>
                  </td>
                  
                  <!-- Ячейки для столов -->
                  <% @tables.each do |table| %>
                    <% booking = @bookings.find { |b| b.seats.any? { |s| s.table_id == table.id } && b.starts_at <= time_slot && b.ends_at > time_slot } %>
                    <td class="text-center p-1">
                      <% if booking %>
                        <% status_info = get_status_info(booking.status) %>
                        <% tooltip_content = [
                              booking.user&.full_name,
                              "Бронь №#{booking.booking_number}",
                              "до #{booking.ends_at.strftime('%H:%M')}"
                            ].join("\n") %>
                        <%= link_to manager_booking_path(booking), class: "block w-full h-full p-1 rounded", target: "_blank", rel: "noopener noreferrer" do %>
                          <div class="tooltip" data-tip="<%= tooltip_content %>">
                            <div class="w-full h-full <%= status_info[:color] %> rounded text-xs text-white p-1">
                              <%= booking.user&.full_name&.split&.first %>
                            </div>
                          </div>
                        <% end %>
                      <% else %>
                        <div class="w-full h-full bg-success rounded"></div>
                      <% end %>
                    </td>
                  <% end %>
                  
                  <!-- Ячейки для отдельных мест -->
                  <% @individual_seats.each do |seat| %>
                    <% booking = @bookings.find { |b| b.seats.include?(seat) && b.starts_at <= time_slot && b.ends_at > time_slot } %>
                    <td class="text-center p-1">
                      <% if booking %>
                        <% status_info = get_status_info(booking.status) %>
                        <% tooltip_content = [
                              booking.user&.full_name,
                              "Бронь №#{booking.booking_number}",
                              "до #{booking.ends_at.strftime('%H:%M')}"
                            ].join("\n") %>
                        <%= link_to manager_booking_path(booking), class: "block w-full h-full p-1 rounded", target: "_blank", rel: "noopener noreferrer" do %>
                          <div class="tooltip" data-tip="<%= tooltip_content %>">
                            <div class="w-full h-full <%= status_info[:color] %> rounded text-xs text-white p-1">
                              <%= booking.user&.full_name&.split&.first %>
                            </div>
                          </div>
                        <% end %>
                      <% else %>
                        <div class="w-full h-full bg-success rounded"></div>
                      <% end %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Список бронирований на выбранный день -->
    <div class="bg-base-100 rounded-lg shadow-lg p-6">
      <!-- ИСПРАВЛЕНО: Локализованная дата -->
      <h2 class="text-xl font-bold mb-4">Бронирования на <%= russian_date(@selected_date) %></h2>
      <div class="overflow-x-auto">
        <table class="table table-compact w-full">
          <thead>
            <tr>
              <th>Номер</th>
              <th>Клиент</th>
              <th>Стол / Место</th>
              <th>Время</th>
              <th>Статус</th>
              <th>Действия</th>
            </tr>
          </thead>
          <tbody>
            <% @bookings.each do |booking| %>
              <tr>
                <td><%= booking.booking_number %></td>
                <td><%= booking.user&.full_name || "Неизвестный" %></td>
                <td>
                  <% if booking.seats.any? %>
                    <% seats_by_table = booking.seats.includes(:table).group_by(&:table) %>
                    <% seats_by_table.each do |table, seats| %>
                      <% if table %>
                        <% total_seats_at_table = @table_seat_counts[table.id] || 0 %>

                        <% if seats.count == total_seats_at_table && total_seats_at_table > 0 %>
                          <span class="badge badge-outline">Стол <%= table.name %></span>
                        <% else %>
                          <span class="badge badge-outline">Стол <%= table.name %> (места: <%= seats.map(&:number).join(', ') %>)</span>
                        <% end %>
                      <% else %>
                        <% seats.each do |seat| %>
                          <span class="badge badge-outline">М<%= seat.number %></span>
                        <% end %>
                      <% end %>
                    <% end %>
                  <% else %>
                    <span class="badge badge-outline">Нет данных</span>
                  <% end %>
                </td>
                <td>
                  <%= booking.starts_at.strftime('%H:%M') %> - <%= booking.ends_at.strftime('%H:%M') %>
                </td>
                <td>
                  <% status_info = get_status_info(booking.status) %>
                  <div class="badge <%= status_info[:color] %>">
                    <%= status_info[:text] %>
                  </div>
                </td>
                <td>
                  <%= link_to "Детали", manager_booking_path(booking), class: "btn btn-ghost btn-xs", target: "_blank", rel: "noopener noreferrer" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const datePicker = document.getElementById('date-picker');
    
    datePicker.addEventListener('change', function() {
      const selectedDate = this.value;
      window.location.href = `/manager/calendar?date=${selectedDate}`;
    });
  });
</script>
