<div class="min-h-screen bg-base-200">
  <!-- Навигация -->
  <div class="navbar bg-base-100 shadow-lg">
    <div class="flex-1">
      <a class="btn btn-ghost normal-case text-xl">Панель менеджера</a>
    </div>
    <div class="flex-none">
      <ul class="menu menu-horizontal p-0">
        <li><%= link_to "Обзор", manager_dashboard_path, class: "active" %></li>
        <li><%= link_to "Календарь", manager_calendar_path %></li>
        <li><%= link_to "Столы", manager_tables_path %></li>
        <li><%= link_to "Бронирования", manager_bookings_path %></li>
      </ul>
    </div>
  </div>

  <div class="container mx-auto px-4 py-6">
    <!-- Заголовок и быстрые действия -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-4">
      <div>
        <h1 class="text-3xl font-bold">Панель управления</h1>
        <p class="text-base-content/70">Управление бронированиями и столиками</p>
      </div>
      <div class="flex gap-2">
        <button class="btn btn-outline" onclick="refreshData()">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Обновить
        </button>
      </div>
    </div>

    <!-- Ключевые метрики -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
      <div class="stat bg-base-100 rounded-lg shadow">
        <div class="stat-figure text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
        </div>
        <div class="stat-title">Активных бронирований</div>
        <div class="stat-value text-primary"><%= @active_bookings.count %></div>
        <div class="stat-desc">Сейчас в заведении</div>
      </div>

      <div class="stat bg-base-100 rounded-lg shadow">
        <div class="stat-figure text-warning">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-title">Ожидают подтверждения</div>
        <div class="stat-value text-warning"><%= @active_bookings.select { |b| b.status == "pending" }.count %></div>
        <div class="stat-desc">Требуют внимания</div>
      </div>

      <div class="stat bg-base-100 rounded-lg shadow">
        <div class="stat-figure text-info">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <div class="stat-title">Бронирований сегодня</div>
        <div class="stat-value text-info"><%= @today_bookings.count %></div>
        <div class="stat-desc">На <%= russian_date(Date.current) %></div>
      </div>

      <div class="stat bg-base-100 rounded-lg shadow">
        <div class="stat-figure text-success">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-title">Свободных столов</div>
        <div class="stat-value text-success"><%= @tables.count - @current_bookings.count %></div>
        <div class="stat-desc">Из <%= @tables.count %> всего</div>
      </div>
    </div>

    <!-- Содержимое: текущие бронирования и ближайшие -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Текущие бронирования -->
      <div class="bg-base-100 rounded-lg shadow-lg p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-bold">Текущие бронирования</h2>
          <span class="badge badge-ghost badge-lg"><%= Time.current.strftime('%H:%M') %></span>
        </div>
        <div class="overflow-x-auto">
          <table class="table table-compact w-full">
            <thead>
              <tr>
                <th>Стол</th>
                <th>Клиент</th>
                <th>Время</th>
                <th>Статус</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @active_bookings.each do |booking| %>
                <tr>
                  <td>
                    <% if booking.seats.any? %>
                      <%# Группируем места по столам для корректного отображения %>
                      <% seats_by_table = booking.seats.includes(:table).group_by(&:table) %>
                      <% seats_by_table.each do |table, seats| %>
                        <% if table %>
                          <%# Получаем общее количество мест за столом из предзагруженных данных в контроллере %>
                          <% total_seats_at_table = @table_seat_counts[table.id] || 0 %>
                          
                          <%# Если забронированы все места за столом %>
                          <% if seats.count == total_seats_at_table && total_seats_at_table > 0 %>
                            <span class="badge badge-outline">Стол <%= table.name %></span>
                          <%# Если забронирована только часть мест %>
                          <% else %>
                            <span class="badge badge-outline">Стол <%= table.name %> (<%= seats.map(&:number).join(', ') %>)</span>
                          <% end %>
                        <% else %>
                          <%# Если места не привязаны к столу (отдельные места) %>
                          <% seats.each do |seat| %>
                            <span class="badge badge-outline">М<%= seat.number %></span>
                          <% end %>
                        <% end %>
                      <% end %>
                    <% else %>
                      <span class="badge badge-outline">Нет данных</span>
                    <% end %>
                  </td>
                  <td><%= booking.user&.full_name || "Неизвестный" %></td>
                  <td>
                    <%= booking.starts_at.strftime('%H:%M') %> - <%= booking.ends_at.strftime('%H:%M') %>
                  </td>
                  <td>
                    <div class="badge <%= 
                      booking.status == 'pending' ? 'badge-warning' : 
                      booking.status == 'confirmed' ? 'badge-info' : 
                      'badge-success' 
                    %>">
                      <%= booking_status_in_russian(booking.status) %>
                    </div>
                  </td>
                  <td>
                    <%= link_to "Детали", manager_booking_path(booking), class: "btn btn-ghost btn-xs" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Ближайшие бронирования -->
      <div class="bg-base-100 rounded-lg shadow-lg p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-bold">Ближайшие бронирования</h2>
          <%= link_to "Все", manager_calendar_path, class: "btn btn-ghost btn-sm" %>
        </div>
        <div class="space-y-3">
          <% @upcoming_bookings.each do |booking| %>
            <div class="border border-base-300 rounded-lg p-3 hover:shadow-md transition-shadow">
              <div class="flex justify-between items-start">
                <div>
                  <div class="font-semibold"><%= booking.booking_number %></div>
                  <div class="text-sm text-base-content/70">
                    <%= russian_date(booking.starts_at) %>, <%= booking.starts_at.strftime('%H:%M') %> - <%= booking.ends_at.strftime('%H:%M') %>
                  </div>
                  <div class="text-sm">
                    <% if booking.seats.any? %>
                      <% seats_by_table = booking.seats.includes(:table).group_by(&:table) %>
                      <% seats_by_table.each do |table, seats| %>
                        <% if table %>
                          <%# Получаем общее количество мест за столом из предзагруженных данных в контроллере %>
                          <% total_seats_at_table = @table_seat_counts[table.id] || 0 %>
                          
                          <%# Если забронированы все места за столом %>
                          <% if seats.count == total_seats_at_table && total_seats_at_table > 0 %>
                            <span class="badge badge-outline badge-sm">Стол <%= table.name %></span>
                          <%# Если забронирована только часть мест %>
                          <% else %>
                            <span class="badge badge-outline badge-sm">Стол <%= table.name %> (<%= seats.map(&:number).join(', ') %>)</span>
                          <% end %>
                        <% else %>
                          <%# Если места не привязаны к столу (отдельные места) %>
                          <% seats.each do |seat| %>
                            <span class="badge badge-outline badge-sm">М<%= seat.number %></span>
                          <% end %>
                        <% end %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
                <div class="text-right">
                  <div class="badge <%= 
                    booking.status == 'pending' ? 'badge-warning' : 
                    booking.status == 'confirmed' ? 'badge-info' : 
                    'badge-success' 
                  %> mb-2">
                    <%= booking_status_in_russian(booking.status) %>
                  </div>
                  <div class="text-sm font-semibold">
                    <%= booking.user&.full_name || "Неизвестный" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Состояние столов и мест -->
    <div class="bg-base-100 rounded-lg shadow-lg p-6 mt-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold">Состояние столов и мест</h2>
        <%= link_to "Все столы", manager_tables_path, class: "btn btn-ghost btn-sm" %>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
        <% @tables.each do |table| %>
          <% booking = @current_bookings.find { |b| b.seats.any? { |s| s.table_id == table.id } } %>
          <div class="card bg-base-200 shadow-md <%= 'border-2 border-warning' if booking %>">
            <div class="card-body p-4 text-center">
              <h3 class="card-title justify-center text-lg">Стол <%= table.name %></h3>
              <div class="text-sm text-base-content/70 mb-2"><%= table.seats_count %> мест</div>
              <% if booking %>
                <div class="badge badge-warning badge-sm mb-2">Занят</div>
                <div class="text-xs">
                  <%= booking.user&.full_name %><br>
                  до <%= booking.ends_at.strftime('%H:%M') %>
                </div>
              <% else %>
                <div class="badge badge-success badge-sm">Свободен</div>
              <% end %>
            </div>
          </div>
        <% end %>
        
        <%# Отображение отдельных мест, не привязанных к столам %>
        <% @individual_seats.each do |seat| %>
          <% booking = @current_bookings.find { |b| b.seats.include?(seat) } %>
          <div class="card bg-base-200 shadow-md <%= 'border-2 border-warning' if booking %>">
            <div class="card-body p-4 text-center">
              <h3 class="card-title justify-center text-lg">Место <%= seat.number %></h3>
              <div class="text-sm text-base-content/70 mb-2">Отдельное место</div>
              <% if booking %>
                <div class="badge badge-warning badge-sm mb-2">Занято</div>
                <div class="text-xs">
                  <%= booking.user&.full_name %><br>
                  до <%= booking.ends_at.strftime('%H:%M') %>
                </div>
              <% else %>
                <div class="badge badge-success badge-sm">Свободно</div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  function refreshData() {
    location.reload();
  }
</script>
