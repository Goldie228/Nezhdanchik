<!-- Шаблон для чека (скрыт на экране) -->
<div id="receipt-template" class="print-only" style="display: none;">
  <div style="text-align: center; margin-bottom: 20px;">
    <h2 style="font-size: 18pt; font-weight: bold;">ЧЕК</h2>
    <p style="font-size: 14pt;">Бронирование №<%= @booking.booking_number %></p>
    <p style="font-size: 12pt;">Дата: <%= @booking.starts_at.strftime('%d.%m.%Y') %></p>
    <p style="font-size: 12pt;">Время: с <%= @booking.starts_at.strftime('%H:%M') %> до <%= @booking.ends_at.strftime('%H:%M') %></p>
  </div>
  
  <div style="margin-bottom: 20px;">
    <h3 style="font-size: 14pt; font-weight: bold; margin-bottom: 10px;">Клиент</h3>
    <p style="font-size: 12pt;"><%= @booking.user&.last_name %> <%= @booking.user&.first_name %></p>
    <% if @booking.user&.phone %>
      <p style="font-size: 12pt;">Телефон: <%= format_phone_number(@booking.user.phone) %></p>
    <% end %>
  </div>
  
  <div style="margin-bottom: 20px;">
    <h3 style="font-size: 14pt; font-weight: bold; margin-bottom: 10px;">Стол</h3>
    <p style="font-size: 12pt;">
      <% if @booking.seats.any? %>
        <% seats_by_table = @booking.seats.includes(:table).group_by(&:table) %>
        <% seats_by_table.each do |table, seats| %>
          <% if table %>
            <%# Если забронированы все места за столом %>
            <% if seats.count == table.seats.count %>
              Стол <%= table.name %>
            <%# Если забронирована часть мест %>
            <% else %>
              Стол <%= table.name %> (места: <%= seats.map(&:number).join(', ') %>)
            <% end %>
          <% else %>
            <%# Если места не привязаны к столу %>
            <% seats.each do |seat| %>
              М<%= seat.number %>
            <% end %>
          <% end %>
        <% end %>
      <% else %>
        Нет данных
      <% end %>
    </p>
  </div>
  
  <% if @order_items.any? %>
    <div style="margin-bottom: 20px;">
      <h3 style="font-size: 14pt; font-weight: bold; margin-bottom: 10px;">Заказанные блюда</h3>
      <table style="width: 100%; border-collapse: collapse;">
        <thead>
          <tr>
            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Блюдо</th>
            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Цена</th>
            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Кол-во</th>
            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Сумма</th>
          </tr>
        </thead>
        <tbody>
          <% @order_items.each do |item| %>
            <tr>
              <td style="border: 1px solid #ddd; padding: 8px;"><%= item.dish.title %></td>
              <td style="border: 1px solid #ddd; padding: 8px;"><%= number_to_currency(item.unit_price, unit: "BYN", format: "%n %u") %></td>
              <td style="border: 1px solid #ddd; padding: 8px;"><%= item.quantity %></td>
              <td style="border: 1px solid #ddd; padding: 8px;"><%= number_to_currency(item.total_price, unit: "BYN", format: "%n %u") %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="3" style="border: 1px solid #ddd; padding: 8px; text-align: left; font-weight: bold;">Итого по заказу:</td>
            <td style="border: 1px solid #ddd; padding: 8px; text-align: left; font-weight: bold;"><%= number_to_currency(@order_items.sum(&:total_price), unit: "BYN", format: "%n %u") %></td>
          </tr>
          <tr>
            <td colspan="3" style="border: 1px solid #ddd; padding: 8px; text-align: left; font-weight: bold;">Общая сумма (бронирование + заказ):</td>
            <td style="border: 1px solid #ddd; padding: 8px; text-align: left; font-weight: bold;"><%= number_to_currency(@booking.total_price + @order_items.sum(&:total_price), unit: "BYN", format: "%n %u") %></td>
          </tr>
        </tfoot>
      </table>
    </div>
  <% end %>
  
  <div style="margin-top: 30px; text-align: center;">
    <p style="font-size: 10pt;">Спасибо за посещение нашего ресторана!</p>
  </div>
</div>

<script>
  // Функция печати чека
  function printReceipt() {
    // Создаем новое окно для печати
    const printWindow = window.open('', '_blank');
    
    // Копируем содержимое шаблона чека в новое окно
    const receiptContent = document.getElementById('receipt-template').innerHTML;
    
    // Формируем HTML для нового окна
    const printHTML = `
      <!DOCTYPE html>
      <html>
      <head>
        <title>Чек - Бронирование №<%= @booking.booking_number %></title>
        <style>
          body {
            font-family: Arial, sans-serif;
            font-size: 12pt;
            line-height: 1.4;
            margin: 20px;
          }
          h2, h3 {
            margin-bottom: 10px;
          }
          table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
          }
          th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
          }
          th {
            background-color: #f2f2f2;
            font-weight: bold;
          }
          .footer {
            margin-top: 30px;
            text-align: center;
            font-size: 10pt;
          }
        </style>
      </head>
      <body>
        ${receiptContent}
      </body>
      </html>
    `;
    
    // Записываем HTML в новое окно
    printWindow.document.write(printHTML);
    printWindow.document.close();
    
    // Ждем загрузки содержимого и вызываем печать
    printWindow.onload = function() {
      printWindow.print();
      printWindow.close();
    };
  }
</script>
