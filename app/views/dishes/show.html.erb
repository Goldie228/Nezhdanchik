                                <span class="flex items-center gap-1">
                                  <span class="w-2 h-2 bg-accent rounded-full"></span>
                                  У: <%= number_with_precision(di.ingredient.nutrition.carbohydrates || 0, precision: 1) %>г
                                </span>
                              <% end %>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </label>
                  <% end %>
                </div>
              </div>
            </div>
