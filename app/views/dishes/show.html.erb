                <%= form_with url: add_to_cart_path(@dish.id), method: :post, local: false, id: "add-to-cart-form", html: { "data-type": :json } do |form| %>
                  <%= form.submit "Добавить в корзину", 
                      class: "btn btn-primary btn-md md:btn-lg w-full shadow-lg transform transition-all hover:scale-105 active:scale-95 duration-200",
                      id: "order-button" %>
                <% end %>
              </div>
              
              <!-- Состояние: товар уже в корзине (изначально скрыто) -->
              <div id="quantity-controls" class="hidden w-full">
                <div class="flex items-center justify-center gap-4">
