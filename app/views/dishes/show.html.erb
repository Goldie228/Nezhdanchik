<script>
document.addEventListener('DOMContentLoaded', function() {
  function getCsrfToken() {
    const metaTag = document.querySelector('meta[name="csrf-token"]');
    if (metaTag) {
      return metaTag.getAttribute('content');
    }
    
    // Способ 2: из параметра мета-тега
    const paramTag = document.querySelector('meta[name="csrf-param"]');
    if (paramTag) {
      const paramName = paramTag.getAttribute('content');
      const input = document.querySelector(`input[name="${paramName}"]`);
      if (input) {
        return input.value;
      }
    }

    const cookies = document.cookie.split(';');
    for (let i = 0; i < cookies.length; i++) {
      const cookie = cookies[i].trim();
      if (cookie.startsWith('_rails_session=')) {
        continue;
      }
      if (cookie.startsWith('CSRF-TOKEN=')) {
        return cookie.substring('CSRF-TOKEN='.length);
      }
    }

    const csrfInput = document.querySelector('input[name="authenticity_token"]');
    if (csrfInput) {
      return csrfInput.value;
    }
    
    console.warn('CSRF token not found using any method');
    return null;
  }

  const safeElement = (id, fallback = null) => {
    const element = document.getElementById(id);
    if (!element) {
      console.warn(`Element #${id} not found`);
      return fallback;
    }
    return element;
  };

  const dishId = <%= @dish.id %>;
  const csrfToken = getCsrfToken();

  const orderForm = document.getElementById('add-to-cart-form');
  if (orderForm) {

    orderForm.dataset.ingredientIds = '';
    orderForm.dataset.removedIngredientIds = '';

    orderForm.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const selectedIds = (orderForm.dataset.ingredientIds || '').split(',').filter(id => id);
      const removedIds = (orderForm.dataset.removedIngredientIds || '').split(',').filter(id => id);
      
      const formData = new FormData();

      if (selectedIds.length > 0) {
        selectedIds.forEach(id => {
          formData.append('selected_ingredient_ids[]', id);
        });
      }
      
      if (removedIds.length > 0) {
        removedIds.forEach(id => {
          formData.append('removed_ingredient_ids[]', id);
        });
      }

      fetch(orderForm.action, {
        method: 'POST',
        body: formData,
        headers: {
          'X-CSRF-Token': csrfToken,
          'Accept': 'application/json'
        }
      })
      .then(response => {
        if (!response.ok) {
          throw new Error('Network response was not ok');
        }

        return response.text().then(text => {
          try {
            return text ? JSON.parse(text) : { in_cart: true, quantity: 1 };
          } catch (e) {
            console.warn('Failed to parse JSON, using default response');
            return { in_cart: true, quantity: 1 };
          }
        });
      })
      .then(data => {
        updateCartInfoDisplay(data);
      })
      .catch(error => {
        console.error('Error adding to cart:', error);

        updateCartInfoDisplay({ in_cart: true, quantity: 1 });
      });
    });
  }

  const safeParseFloat = (value, fallback = 0) => {
    const parsed = parseFloat(value);
    return isNaN(parsed) ? fallback : parsed;
  };

  const safeParseInt = (value, fallback = 0) => {
    const parsed = parseInt(value);
    return isNaN(parsed) ? fallback : parsed;
  };

  const basePriceElement = safeElement('base-price');
  const totalPriceElement = safeElement('total-price');
  const totalWeightElement = safeElement('total-weight');
  const orderButton = safeElement('order-button');

  if (!basePriceElement || !totalPriceElement || !orderButton) {
    console.error('Critical elements missing - disabling order functionality');
    return;
  }

  const basePrice = safeParseFloat(basePriceElement?.dataset?.basePrice, 0);
  const baseWeight = safeParseInt(totalWeightElement?.dataset?.baseWeight, 0);

  const nutritionBlock = safeElement('nutrition-block');
  let baseProteins = 0, baseFats = 0, baseCarbohydrates = 0;

  if (nutritionBlock) {
    baseProteins = safeParseFloat(nutritionBlock.dataset.baseProteins, 0);
    baseFats = safeParseFloat(nutritionBlock.dataset.baseFats, 0);
    baseCarbohydrates = safeParseFloat(nutritionBlock.dataset.baseCarbohydrates, 0);
  }

  const ingredientCheckboxes = document.querySelectorAll('.ingredient-checkbox');

  const calculateCalories = (proteins, fats, carbohydrates) => {
    return (Math.max(0, proteins) * 4) + (Math.max(0, fats) * 9) + (Math.max(0, carbohydrates) * 4);
  };

  const updateNutrition = () => {
    if (!nutritionBlock) return;

    let currentProteins = baseProteins;
    let currentFats = baseFats;
    let currentCarbohydrates = baseCarbohydrates;

    ingredientCheckboxes.forEach(checkbox => {
      if (!checkbox.dataset) return;
      
      const proteins = safeParseFloat(checkbox.dataset.proteins, 0);
      const fats = safeParseFloat(checkbox.dataset.fats, 0);
      const carbohydrates = safeParseFloat(checkbox.dataset.carbohydrates, 0);
      const isDefault = checkbox.dataset.default === 'true';

      if (isDefault) {
        if (!checkbox.checked) {
          currentProteins -= proteins;
          currentFats -= fats;
          currentCarbohydrates -= carbohydrates;
        }
      } else {
        if (checkbox.checked) {
          currentProteins += proteins;
          currentFats += fats;
          currentCarbohydrates += carbohydrates;
        }
      }
    });

    const proteinsEl = safeElement('nutrition-proteins');
    const fatsEl = safeElement('nutrition-fats');
    const carbsEl = safeElement('nutrition-carbs');
    const caloriesEl = safeElement('nutrition-calories');

    if (proteinsEl) proteinsEl.textContent = Math.max(0, currentProteins).toFixed(1) + ' г';
    if (fatsEl) fatsEl.textContent = Math.max(0, currentFats).toFixed(1) + ' г';
    if (carbsEl) carbsEl.textContent = Math.max(0, currentCarbohydrates).toFixed(1) + ' г';
    if (caloriesEl) {
      const calories = calculateCalories(currentProteins, currentFats, currentCarbohydrates);
      caloriesEl.textContent = Math.max(0, calories).toFixed(0) + ' ккал';
    }
  };

  const updateTotals = () => {
    let currentTotalPrice = basePrice;
    let currentTotalWeight = baseWeight;
    let extrasPrice = 0;
    const selectedIngredientIds = [];
    const removedIngredientIds = [];

    ingredientCheckboxes.forEach(checkbox => {
      if (!checkbox.dataset) return;

      const price = safeParseFloat(checkbox.dataset.price, 0);
      const weight = safeParseInt(checkbox.dataset.weight, 0);
      const ingredientId = checkbox.dataset.ingredientId;
      const isDefault = checkbox.dataset.default === 'true';

      if (!ingredientId) return;

      if (isDefault) {
        if (!checkbox.checked) {
          currentTotalPrice -= price;
          currentTotalWeight -= weight;
          removedIngredientIds.push(ingredientId);
        }
      } else {
        if (checkbox.checked) {
          currentTotalPrice += price;
          currentTotalWeight += weight;
          extrasPrice += price;
          selectedIngredientIds.push(ingredientId);
        }
      }
    });

    totalPriceElement.textContent = Math.max(0, currentTotalPrice).toFixed(2) + ' BYN';
    totalWeightElement.textContent = Math.max(0, currentTotalWeight) + ' г';
    
    const extrasPriceElement = safeElement('extras-price');
    if (extrasPriceElement) {
      extrasPriceElement.textContent = Math.max(0, extrasPrice).toFixed(2) + ' BYN';
    }

    if (orderForm) {
      orderForm.dataset.ingredientIds = selectedIngredientIds.join(',');
      orderForm.dataset.removedIngredientIds = removedIngredientIds.join(',');
    }

    updateNutrition();
    updateCartInfo();
  };

  const updateCartInfo = () => {
    const selectedIds = (orderForm?.dataset?.ingredientIds || '').split(',').filter(id => id);
    const removedIds = (orderForm?.dataset?.removedIngredientIds || '').split(',').filter(id => id);
    
    fetch(`/cart/info/${dishId}?selected_ingredient_ids=${selectedIds.join(',')}&removed_ingredient_ids=${removedIds.join(',')}`)
      .then(response => {
        if (!response.ok) {
          throw new Error('Network response was not ok');
        }

        return response.text().then(text => {
          try {
            return text ? JSON.parse(text) : { in_cart: false, quantity: 0 };
          } catch (e) {
            console.warn('Failed to parse JSON, using default response');
            return { in_cart: false, quantity: 0 };
          }
        });
      })
      .then(data => {
        updateCartInfoDisplay(data);
      })
      .catch(error => {
        console.error('Error updating cart info:', error);
        updateCartInfoDisplay({ in_cart: false, quantity: 0 });
      });
  };

  const updateCartInfoDisplay = (data) => {
    const addToCartContainer = safeElement('add-to-cart-container');
    const quantityControls = safeElement('quantity-controls');
    const cartQuantity = safeElement('cart-quantity');
    
    if (data.in_cart) {
      if (addToCartContainer) addToCartContainer.classList.add('hidden');
      if (quantityControls) quantityControls.classList.remove('hidden');
      if (cartQuantity) cartQuantity.textContent = data.quantity || 1;
    } else {
      if (addToCartContainer) addToCartContainer.classList.remove('hidden');
      if (quantityControls) quantityControls.classList.add('hidden');
    }
  };

  const increaseQuantity = () => {
    const selectedIds = (orderForm?.dataset?.ingredientIds || '').split(',').filter(id => id);
    const removedIds = (orderForm?.dataset?.removedIngredientIds || '').split(',').filter(id => id);
    
    const headers = {
      'Content-Type': 'application/json'
    };

    if (csrfToken) {
      headers['X-CSRF-Token'] = csrfToken;
    }
    
    fetch(`/cart/increase/${dishId}?selected_ingredient_ids=${selectedIds.join(',')}&removed_ingredient_ids=${removedIds.join(',')}`, {
      method: 'POST',
      headers: headers
    })
      .then(response => {
        if (!response.ok) {
          throw new Error('Network response was not ok');
        }

        return response.text().then(text => {
          try {
            return text ? JSON.parse(text) : { in_cart: true, quantity: 1 };
          } catch (e) {
            console.warn('Failed to parse JSON, using default response');
            return { in_cart: true, quantity: 1 };
          }
        });
      })
      .then(data => {
        updateCartInfoDisplay(data);
      })
      .catch(error => {
        console.error('Error increasing quantity:', error);
      });
  };

  const decreaseQuantity = () => {
    const selectedIds = (orderForm?.dataset?.ingredientIds || '').split(',').filter(id => id);
    const removedIds = (orderForm?.dataset?.removedIngredientIds || '').split(',').filter(id => id);
    
    const headers = {
      'Content-Type': 'application/json'
    };

    if (csrfToken) {
      headers['X-CSRF-Token'] = csrfToken;
    }
    
    fetch(`/cart/decrease/${dishId}?selected_ingredient_ids=${selectedIds.join(',')}&removed_ingredient_ids=${removedIds.join(',')}`, {
      method: 'POST',
      headers: headers
    })
      .then(response => {
        if (!response.ok) {
          throw new Error('Network response was not ok');
        }
        return response.text().then(text => {
          try {
            return text ? JSON.parse(text) : { in_cart: false, quantity: 0 };
          } catch (e) {
            console.warn('Failed to parse JSON, using default response');
            return { in_cart: false, quantity: 0 };
          }
        });
      })
      .then(data => {
        updateCartInfoDisplay(data);
      })
      .catch(error => {
        console.error('Error decreasing quantity:', error);
      });
  };

  ingredientCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', updateTotals);
  });

  const increaseButton = document.getElementById('increase-quantity');
  const decreaseButton = document.getElementById('decrease-quantity');
  
  if (increaseButton) {
    increaseButton.addEventListener('click', (e) => {
      e.preventDefault();
      increaseQuantity();
    });
  }
  
  if (decreaseButton) {
    decreaseButton.addEventListener('click', (e) => {
      e.preventDefault();
      decreaseQuantity();
    });
  }

  updateTotals();

  updateCartInfo();

  const carouselContainer = document.getElementById('dish-carousel-container');
  const carouselTrack = document.getElementById('carousel-track');
  const prevButton = document.getElementById('prev-slide');
  const nextButton = document.getElementById('next-slide');
  const indicators = document.querySelectorAll('.carousel-indicator');
  const slides = document.querySelectorAll('.carousel-slide');
  
  if (carouselContainer && carouselTrack && slides.length > 0) {
    let currentIndex = 0;
    const totalSlides = slides.length;

    const updateCarousel = () => {
      carouselTrack.style.transform = `translateX(-${currentIndex * 100}%)`;

      indicators.forEach((indicator, index) => {
        if (index === currentIndex) {
          indicator.classList.add('bg-primary', 'md:w-6');
          indicator.classList.remove('bg-base-300');
        } else {
          indicator.classList.remove('bg-primary', 'md:w-6');
          indicator.classList.add('bg-base-300');
        }
      });
    };

    const nextSlide = () => {
      currentIndex = (currentIndex + 1) % totalSlides;
      updateCarousel();
    };

    const prevSlide = () => {
      currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
      updateCarousel();
    };

    const goToSlide = (index) => {
      currentIndex = index;
      updateCarousel();
    };

    if (prevButton) {
      prevButton.addEventListener('click', (e) => {
        e.preventDefault();
        prevSlide();
      });
    }
    
    if (nextButton) {
      nextButton.addEventListener('click', (e) => {
        e.preventDefault();
        nextSlide();
      });
    }

    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', (e) => {
        e.preventDefault();
        goToSlide(index);
      });
    });

    let touchStartX = 0;
    let touchEndX = 0;
    
    carouselContainer.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
    });
    
    carouselContainer.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    });
    
    const handleSwipe = () => {
      if (touchEndX < touchStartX - 50) {
        nextSlide();
      }
      
      if (touchEndX > touchStartX + 50) {
        prevSlide();
      }
    };

    updateCarousel();
  }
});

function openImageModal(imageUrl) {
  try {
    const modal = document.getElementById('image_modal');
    const modalImage = document.getElementById('modal_image');
    
    if (modal && modalImage && typeof modal.showModal === 'function') {
      modalImage.src = imageUrl;
      modal.showModal();
    } else {
      console.warn('Modal elements not found or showModal not supported');
      window.open(imageUrl, '_blank');
    }
  } catch (error) {
    console.error('Error opening image modal:', error);
    window.open(imageUrl, '_blank');
  }
}
