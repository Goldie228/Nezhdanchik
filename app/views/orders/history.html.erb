<div class="min-h-screen bg-base-200">
  <div class="container mx-auto px-4 py-4 md:py-8">
    <!-- Хлебные крошки -->
    <div class="text-sm breadcrumbs mb-4 md:mb-6">
      <ul>
        <li><a href="#" class="text-primary hover:text-primary-focus">Главная</a></li>
        <li><span class="text-base-content/60">История заказов</span></li>
      </ul>
    </div>

    <!-- Заголовок страницы -->
    <div class="card bg-base-100 shadow-xl mb-6 md:mb-8">
      <div class="card-body">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <div>
            <h1 class="card-title text-2xl md:text-3xl font-bold text-primary mb-2">
              История заказов
            </h1>
            <p class="text-base-content/70">
              Здесь вы можете просмотреть все ваши предыдущие заказы
            </p>
          </div>
          <div class="stats shadow">
            <div class="stat">
              <div class="stat-title">Всего заказов</div>
              <div class="stat-value text-primary"><%= @orders.count %></div>
              <div class="stat-desc">За последние 30 дней</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Список заказов -->
    <div class="space-y-6">
      <% @orders.each do |order| %>
        <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300">
          <div class="card-body p-4 md:p-6">
            <!-- Шапка заказа -->
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-4">
              <div class="flex items-center gap-4">
                <div class="flex flex-col">
                  <span class="text-sm text-base-content/60">Номер заказа</span>
                  <span class="text-lg font-bold text-primary"><%= order[:order_number] %></span>
                </div>
                <div class="flex flex-col">
                  <span class="text-sm text-base-content/60">Дата</span>
                  <span class="font-semibold"><%= order[:date] %></span>
                </div>
              </div>
              
              <div class="flex items-center gap-4">
                <div class="flex flex-col text-right">
                  <span class="text-sm text-base-content/60">Сумма</span>
                  <span class="text-xl font-bold text-primary">
                    <%= number_to_currency(order[:total], unit: "BYN", format: "%n %u") %>
                  </span>
                </div>
                <div class="badge badge-lg <%= order[:status] == 'completed' ? 'badge-success' : 'badge-error' %>">
                  <%= order[:status_text] %>
                </div>
              </div>
            </div>

            <div class="divider my-2"></div>

            <!-- Список товаров -->
            <div class="space-y-3">
              <% order[:items].each do |item| %>
                <div class="flex items-center gap-4 p-3 bg-base-200 rounded-xl hover:bg-base-300 transition-colors duration-200">
                  <!-- Изображение товара -->
                  <figure class="w-16 h-16 rounded-xl overflow-hidden flex-shrink-0 bg-base-300 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-base-content/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </figure>

                  <div class="flex-1 min-w-0">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
                      <h3 class="font-semibold text-base truncate"><%= item[:name] %></h3>
                      <div class="flex items-center gap-4">
                        <span class="text-base-content/70">
                          <%= item[:quantity] %> × <%= number_to_currency(item[:price], unit: "BYN", format: "%n %u") %>
                        </span>
                        <span class="font-semibold text-primary">
                          <%= number_to_currency(item[:quantity] * item[:price], unit: "BYN", format: "%n %u") %>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Дополнительная информация -->
            <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
              <div class="space-y-2">
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span class="text-base-content/60">Адрес доставки:</span>
                </div>
                <span class="font-medium block ml-6"><%= order[:delivery_address] %></span>
              </div>

              <div class="space-y-2">
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                  </svg>
                  <span class="text-base-content/60">Способ оплаты:</span>
                </div>
                <span class="font-medium block ml-6"><%= order[:payment_method] %></span>
              </div>
            </div>

            <!-- Причина отмены (если заказ отменен) -->
            <% if order[:status] == 'cancelled' && order[:cancellation_reason] %>
              <div class="mt-4 p-3 bg-error/10 rounded-xl border border-error/20">
                <div class="flex items-center gap-2 text-error">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="font-medium">Причина отмены:</span>
                </div>
                <p class="text-error text-sm mt-1 ml-6"><%= order[:cancellation_reason] %></p>
              </div>
            <% end %>

            <!-- Действия -->
            <div class="card-actions justify-end mt-4">
              <button class="btn btn-outline btn-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Детали
              </button>
              <% if order[:status] == 'completed' %>
                <button class="btn btn-primary btn-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                  </svg>
                  Повторить заказ
                </button>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Пагинация -->
    <div class="flex justify-center mt-8">
      <div class="join">
        <button class="join-item btn btn-outline">«</button>
        <button class="join-item btn btn-active">1</button>
        <button class="join-item btn btn-outline">2</button>
        <button class="join-item btn btn-outline">3</button>
        <button class="join-item btn btn-outline">»</button>
      </div>
    </div>

    <!-- Пустая история (если нужно показать) -->
    <% if @orders.empty? %>
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body text-center py-12">
          <div class="flex justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-base-content/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-base-content/70 mb-2">История заказов пуста</h3>
          <p class="text-base-content/60 mb-6">Здесь будут отображаться все ваши завершенные заказы</p>
          <button class="btn btn-primary">Сделать первый заказ</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
